fun int add3(int x) = x + 3

fun [int] aux (int whocares) = map(add3,iota(read(int)))

fun int plus (int a, int b) = a+b

fun int aux2 ([int] list) = reduce(plus,0,list)

fun [int] main() =
    let n = read(int) in
        let x = map(aux,iota(n)) in
            let y = map(aux2,x) in
                let p = read(int) in
                    if (2 < p) 
                    then
                        if (p < n)
                        then x[p]
                        else y
                    else y